@model TickUp.Models.Usuario
@{
    ViewData["Title"] = "Cadastrar";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/cadastro.css">
    <title>TickUp</title>
</head>

<body>
    <main>
        <div class="row g-5">
            <div class="col-md-7 col-lg-8">
                <h4 class="mb-3">Crie o seu perfil</h4>
                <form class="needs-validation" novalidate="" method="post">
                    <div class="row g-3">
                        <div class="col-sm-12">
                            <label for="name" class="form-label">Nome completo</label>
                            <input asp-for="NomeUser" name="nomeUser" type="text" class="form-control" id="nomeUser" required="">
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="cpf" class="form-label">CPF/CNPJ <span class="text-body-secondary"></span></label>
                            <input asp-for="CpfUser" name="cpfUser" type="text" class="form-control" id="cpfUser" required="">
                            <div class="invalid-feedback">
                                Please enter a valid CPF.
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="email" class="form-label">Email <span class="text-body-secondary"></span></label>
                            <input asp-for="EmailUser" name="emailUser" type="text" class="form-control" id="emailUser"  required="">
                            <div class="invalid-feedback">
                                Please enter a valid email address.
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="password" class="form-label">Senha <span class="text-body-secondary"></span></label>
                            <input asp-for="SenhaUser" name="senhaUser" type="password" class="form-control" id="senhaUser" required="">
                            <div class="invalid-feedback">
                                Please enter a valid password.
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="date" class="form-label">Idade</label>
                            <input asp-for="IdadeUser" name="idadeUser" type="number" class="form-control" id="idadeUser" required="">
                            <div class="invalid-feedback">
                                Please enter your birth date.
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="telephone" class="form-label">Telefone</label>
                            <input asp-for="TelefoneUser" name="telefoneUser" type="tel" class="form-control" id="telefoneUser" required="">
                            <div class="invalid-feedback">
                                Please enter your phone number.
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">
                    <button class="w-100 btn btn-primary btn-lg" type="submit">Concluir</button>
                </form>
            </div>
        </div>
    </main>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="~/js/jquery.inputmask.min.js"></script>
        <script>
            $(document).ready(function () {
                var cpfInput = $('#cpfUser');
                var telefoneUser = $('#telefoneUser');
               

                cpfInput.inputmask("");
                telefoneUser.inputmask("(99) 99999-9999");
              

                cpfInput.on('input', function () {
                    var valor = $(this).val().replace(/\D/g, ''); 
                    if (valor.length = 11) {
                        cpfInput.inputmask("999.999.999-99");

                    } else {
                        cpfInput.inputmask("99.999.999/9999-99");

                    }
                });
            });
        </script>
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
