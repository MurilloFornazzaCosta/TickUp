@model TickUp.Models.Evento

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.NomeEvento</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/eventos.css">
</head>
<body>

    <main>
        @{
            string formato = "data:image/jpeg;base64," + Convert.ToBase64String(Model.BytesImagem);
        }
        <partial name="_Toast" />

        <div class="img_evento">
            <div class="img_especifica-fundo">
                <img class="img_fundo" src=@formato alt="">
            </div>
            <div class="img_especifica-frente">
                <img class="img_frente" src=@formato alt="">
            </div>

            <div class="main_info">
                <h3>@Model.NomeEvento</h3>
                <p>@Model.DataInicio • @Model.HorarioInicio &gt; @Model.DataTermino • @Model.HorarioTermino</p>
                <span>Evento presencial em @Model.Rua, @Model.Numero, @Model.Bairro &nbsp;<a href="">@Model.NomeLocal</a></span>
            </div>


            <div class="secao_evento">

                <br>
                <br>

                <div class="descricao_evento">
                    <h3>Descrição do Evento</h3>
                    <p>@Model.Observacoes</p>
                </div>

                <hr class="my-4">

                <div class="contato_evento">
                    <h3>Contato</h3>
                    <p>@Model.EmailContato</p>
                </div>

                <hr class="my-4">

                <h3>Comprar Ingressos</h3>

                <div class="card">
                    <div class="category"> @Model.NomeEvento </div>
                    <div class="valor">
                        <p id="rs">R$ </p>
                        <div class="heading" id="preco">@Model.ValorIngresso</div>
                    </div>
                    <div  class="buttonComprar">
                       
                         <form asp-controller="Ingresso" asp-action="PegarIngresso" method="get">
                        <input type="hidden" name="idEvento" value="@Model.IdEvento"/>
                            <input asp-for="QuantidadeIngresso" name="quantidadeIngresso" type="hidden" class="form-control" id="quantidadeIngresso" required="">
                            <button class="bt_comprar">Comprar</button>
                        </form>


                        <div class="contador">
                            <button id="minus">-</button>
                            <span id="value">0</span>
                            <button id="plus">+</button>
                        </div>

                    </div>
                </div>

            </div>

        </div>



    </main>

    <script src="~/js/compraIngresso.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>

</body>
</html>