@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/login.css">
  <title>@ViewData["Title"]</title>
</head>

<body>
    <div class="container">
      <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center">
          <h1 id="titulo">TickUp</h1>
        </a>
        <div class="text-end">
          <a href="@Url.Action("Login", "Home")"><button type="button" class="btn btn-outline-primary me-2">Entrar</button></a>
        </div>
      </header>
    </div>

    <main>
      <div class="container">
        <div class="form-box login">
          <h2>Acessar conta</h2>
          <!-- O formulário envia um POST para o controlador correto -->
          <form method="post" action="@Url.Action("Login", "Home")">
            <div class="input-box">
              <input type="email" name="Email" required>
              <label>Email</label>
            </div>
            <div class="input-box">
              <input type="password" name="Password" required>
              <label>Senha</label>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    </main>

    <footer>
        <div>© 2024 Cyber Squad</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
