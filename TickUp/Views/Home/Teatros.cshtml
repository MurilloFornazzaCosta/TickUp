@model IEnumerable<TickUp.Models.Evento>
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Teatros</title>
    <link rel="stylesheet" href="/css/showsFestas.css">
</head>
<body>


    <main>


        <!---------------------SLIDER EVENTOS CARDS EVENTOS------------------------>



        <div class="slider_cards">
            <h3>Peças de teatro em destaque</h3>
            <div class="slides_cards">
                <!--radio buttons-->
                <input type="radio" name="radio-btn-min" id="radio1-min">
                <input type="radio" name="radio-btn-min" id="radio2-min">
                <input type="radio" name="radio-btn-min" id="radio3-min">
                <input type="radio" name="radio-btn-min" id="radio4-min">
                <!--fim radio buttons-->
                <!--slide images-->

                <div class="card first">
                    <div class="card-image"> <img class="img_evento_min" src="/images/tetattroimg.jpg" alt=""> </div>
                    <div class="data"> 20/08/2024 </div>
                    <div class="heading">
                        Mimika
                        <div class="author">  <span class="name">Shopping Dom pedro</span> </div>
                    </div>
                </div>

                @foreach (var item in Model)
                {
                    string formato = "data:image/jpeg;base64," + Convert.ToBase64String(item.BytesImagem);
                    <a href="@Url.Action("MostrarEvento", new { id = item.IdEvento })">
                        <div class="card first">
                            <div class="card-image"> <img class="img_evento_min" src=@formato alt=""> </div>
                            <div class="data">
                                @Html.DisplayFor(modelItem => item.DataInicio)
                            </div>
                            <div class="heading">
                                @Html.DisplayFor(modelItem => item.NomeEvento)

                                <div class="author">  <span class="name"> @Html.DisplayFor(modelItem => item.NomeLocal) </span> </div>
                            </div>
                        </div>
                    </a>

                }



                <!--fim slide images-->
                <!--navigation auto-->
                <div class="navigation-auto-min">
                    <div class="auto-btn1-min"></div>
                    <div class="auto-btn2-min"></div>
                    <div class="auto-btn3-min"></div>
                    <div class="auto-btn4-min"></div>
                </div>

            </div>

            <div class="manual_navigation-min">
                <label for="radio1-min" class="manual-btn-min"></label>
                <label for="radio2-min" class="manual-btn-min"></label>
                <label for="radio3-min" class="manual-btn-min"></label>
                <label for="radio4-min" class="manual-btn-min"></label>
            </div>

        </div>


        <div class="slider_cards">
            <h3>Peças de teatro em alta 🎭</h3>
            <div class="slides_cards">
                <!--radio buttons-->
                <input type="radio" name="radio-btn-min2" id="radio1-min2">
                <input type="radio" name="radio-btn-min2" id="radio2-min2">
                <input type="radio" name="radio-btn-min2" id="radio3-min2">
                <input type="radio" name="radio-btn-min2" id="radio4-min2">
                <!--fim radio buttons-->
                <!--slide images-->

                <div class="card first">
                    <div class="card-image"> <img class="img_evento_min" src="/images/tetattroimg.jpg" alt=""> </div>
                    <div class="data"> 20/08/2024 </div>
                    <div class="heading">
                        Mimika
                        <div class="author">  <span class="name">Shopping Dom pedro</span> </div>
                    </div>
                </div>

                @foreach (var item in Model)
                {
                    string formato = "data:image/jpeg;base64," + Convert.ToBase64String(item.BytesImagem);
                    <a href="@Url.Action("MostrarEvento", new { id = item.IdEvento })">
                        <div class="card first">
                            <div class="card-image"> <img class="img_evento_min" src=@formato alt=""> </div>
                            <div class="data">
                                @Html.DisplayFor(modelItem => item.DataInicio)
                            </div>
                            <div class="heading">
                                @Html.DisplayFor(modelItem => item.NomeEvento)

                                <div class="author">  <span class="name"> @Html.DisplayFor(modelItem => item.NomeLocal) </span> </div>
                            </div>
                        </div>
                    </a>

                }



                <!--fim slide images-->
                <!--navigation auto-->
                <div class="navigation-auto-min2">
                    <div class="auto-btn1-min2"></div>
                    <div class="auto-btn2-min2"></div>
                    <div class="auto-btn3-min2"></div>
                    <div class="auto-btn4-min2"></div>
                </div>

            </div>

            <div class="manual_navigation-min2">
                <label for="radio1-min2" class="manual-btn-min2"></label>
                <label for="radio2-min2" class="manual-btn-min2"></label>
                <label for="radio3-min2" class="manual-btn-min2"></label>
                <label for="radio4-min2" class="manual-btn-min2"></label>
            </div>

        </div>



    </main>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
    <script src="/script/script.js"></script>

</body>
</html>