@model TickUp.Models.Usuario
@{
    ViewData["Title"] = "Cadastrar";
}


<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles/cadastro.css">
  <title>TickUp</title>
</head>

<body>
  <main>
    <div class="row g-5">
        
        <div class="col-md-7 col-lg-8">
          <h4 class="mb-3">Crie o seu perfil</h4>
          <form class="needs-validation" novalidate="">
            <div class="row g-3">

              <div class="col-sm-12">
                <label for="name" class="form-label">Nome completo</label>
                <input asp-for="Nome" name="nome" type="text" class="form-control" id="nomeUsuario" required="">
                <div class="invalid-feedback">
                  Valid first name is required.
                </div>
              </div>

              <div class="col-12">
                <label for="cpf" class="form-label">CPF <span class="text-body-secondary"></span></label>
                <input asp-for="Cpf" name="cpf" type="text" class="form-control" id="nomeLocal" placeholder="###.###.###-##">
                <div class="invalid-feedback">
                  Please enter a valid email address for shipping updates.
                </div>
              </div>
  
              <div class="col-12">
                <label for="email" class="form-label">Email <span class="text-body-secondary"></span></label>
                 <input asp-for="Email" name="email" type="text" class="form-control" id="email" placeholder="email@exemplo.com">
                <div class="invalid-feedback">
                  Please enter a valid email address for shipping updates.
                </div>
              </div>

              <div class="col-12">
                <label for="password" class="form-label">Senha <span class="text-body-secondary"></span></label>
                 <input asp-for="Senha" name="senha" type="password" class="form-control" id="senha">   
                <div class="invalid-feedback">
                  Please enter a valid email address for shipping updates.
                </div>
              </div>
  
              <div class="col-12">
                <label for="date" class="form-label">Data de nascimento</label>
                <input asp-for="Idade" name="idade" type="number" class="form-control" id="idade" required="">
                <div class="invalid-feedback">
                  Please enter your shipping address.
                </div>
              </div>

              <div class="col-12">
                <label for="telephone" class="form-label">Telefone</label>
                <input asp-for="Telefone" name="telefone" type="tel" class="form-control" id="telefone" placeholder="(##) #####-####">
                <div class="invalid-feedback">
                  Please enter your shipping address.
                </div>
              </div>
            </div>
  
            <hr class="my-4">
  
            
  
            <button class="w-100 btn btn-primary btn-lg" type="submit">Concluir</button>
          </form>
        </div>
      </div>
  </main>
</div>

</footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>